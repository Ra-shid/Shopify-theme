<h1>{{ article.title }}</h1>
<p>{{ article.content }}</p>
<strong>{{ article.author }}</strong>
<p>{{ article>.published_at | date: '%B %d, %Y' }}</p>


{% comment %} {% if article.comments_enabled? %} {% endcomment %}
<h2>Leave a comment</h2>
{% for comment in article.comments %}
  <div>
    <p>{{ comment.name }}</p>
    <p>{{ comment.email }}</p>
    <p>{{ comment.content }}</p>
  </div>
{% endfor %}

{% form 'new_comment'
  , article %}
  {{ form.errors | default_errors }}

  <div class="name">
    <label for="name">Name</label>
    <input
      type="text"
      name="comment[author]"
      value="{{ form.author }}">
  </div>

  <div class="email">
    <label for="email">Email</label>
    <input
      type="email"
      name="comment[email]"
      value="{{ form.email }}">
  </div>

  <div class="comment">
    <label for="comment">Comment</label>
    <textarea name="comment[body]">{{ form.body }}</textarea>
  </div>

  <button type="submit">Add comment</button>
{% endform %}
{% comment %} {% endif %} {% endcomment %}