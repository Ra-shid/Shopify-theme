{{ paginate search.results by 5 }}

{% if search.performed %}
  <h1> {{ search.results_count}} results found for {{ search.terms  }}</h1>
  {% for result in search.results %}
    <p>{{ result.object_type }}</p>
    {% if result.object_type == 'product' %}
    <a href="{{ result.url }}">
      <img src="{{ result.image.url |  img_url: '300x300' }}" />
      <h2>{{ result.title }}</h2>
    </a>
    {% endif %}
    {% if result.object_type == 'page' %}
        <a href="{{ result.url }}">
          <h2>{{ result.title }}</h2>
        </a>
        {% endif %}
        {% if result.object_type == 'article' %}
            <a href="{{ result.url }}">
                <img src="{{ result.image.url |  img_url: '300x300' }}"
              <h2>{{ result.title }}</h2>
            </a>
            {% endif %}
  {% endfor %}

{% else %}
  <h1>Try Searching for something.</h1>
{% endif %}

{{ paginate | default_pagination }}
{{ endpaginate }}